		"eslint-plugin-prettier": "~4.2.1",
		"eslint-plugin-unicorn": "~46.0.0",
		"husky": "~8.0.3",
		"live-server": "~1.2.2",
		"postcss": "~8.4.23",
		"postcss-cli": "~10.1.0",
		"postcss-html": "~1.5.0",
		"prettier": "~2.8.8",
		"stylelint": "~15.6.0",
		"stylelint-config-html": "~1.1.0",
		"stylelint-config-standard-scss": "~9.0.0",
		"stylelint-order": "~6.0.3",
		"stylelint-prettier": "~3.0.0",
